#! /usr/bin/env bash
set -e
bauta_url='https://raw.githubusercontent.com/brujoand/bauta/bin/bauta'
test_dir=$( cd "$( dirname "${BASH_SOURCE[0]}")/../tests" && pwd )
test_script="${test_dir}/bauta"

if [[ ! -f "$test_script" ]]; then
  curl -o "$test_script" "$bauta_url"
fi

if [[ ! -x "$test_script" ]]; then
  chmod +x "$test_script"
fi

"${test_script}" "${test_dir}"
